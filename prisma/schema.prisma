generator client {
  provider = "prisma-client"
  output   = "../generated"
}

datasource db {
  provider = "postgresql"
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  VOID
}

model Client {
  id        String   @id @default(cuid())
  ownerId   String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner    User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  projects Project[]
  invoices Invoice[]

  @@unique([ownerId, name])
  @@index([ownerId])
}

model Project {
  id        String   @id @default(cuid())
  ownerId   String
  clientId  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner  User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  client Client @relation(fields: [clientId], references: [id], onDelete: Restrict)

  entries  DailyLogEntry[]
  periods  PayPeriod[]
  invoices Invoice[]

  @@unique([ownerId, clientId, name])
  @@index([ownerId])
  @@index([clientId])
}

model PayPeriod {
  id        String @id @default(cuid())
  projectId String

  startDate DateTime
  endDate   DateTime

  hourlyRate Decimal? @db.Decimal(10, 2)
  totalHours Decimal? @db.Decimal(12, 2)

  closedAt  DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  project Project         @relation(fields: [projectId], references: [id], onDelete: Restrict)
  entries DailyLogEntry[]
  invoice Invoice?

  @@unique([projectId, startDate, endDate])
  @@index([projectId, startDate])
}

model DailyLogEntry {
  id          String  @id @default(cuid())
  projectId   String
  payPeriodId String?

  workDate DateTime

  hours Decimal @db.Decimal(10, 2)
  notes String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project   Project    @relation(fields: [projectId], references: [id], onDelete: Restrict)
  payPeriod PayPeriod? @relation(fields: [payPeriodId], references: [id], onDelete: Restrict)

  @@unique([projectId, workDate])
  @@index([payPeriodId])
  @@index([projectId, workDate])
}

model Invoice {
  id          String @id @default(cuid())
  clientId    String
  projectId   String
  payPeriodId String @unique

  invoiceNo String
  status    InvoiceStatus @default(DRAFT)

  issuedAt DateTime?
  sentAt   DateTime?
  paidAt   DateTime?

  hourlyRate  Decimal @db.Decimal(10, 2)
  totalHours  Decimal @db.Decimal(10, 2)
  totalAmount Decimal @db.Decimal(12, 2)

  notes String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  client    Client    @relation(fields: [clientId], references: [id], onDelete: Restrict)
  project   Project   @relation(fields: [projectId], references: [id], onDelete: Restrict)
  payPeriod PayPeriod @relation(fields: [payPeriodId], references: [id], onDelete: Restrict)

  @@unique([clientId, invoiceNo])
  @@index([clientId, status, sentAt])
  @@index([projectId])
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  sessions Session[]

  clients  Client[]
  projects Project[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}
